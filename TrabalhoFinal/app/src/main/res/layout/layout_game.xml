    <TableLayout
        android:background="#E6000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutPause"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible">
        <TableRow
            android:id="@+id/tableplay"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
           >
            <ImageView
                android:id="@+id/play"
                android:layout_width="114dp"
                android:layout_height="120dp"
                android:background="@drawable/playcert"
                android:layout_marginTop="200dp"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/home"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/homelara" />
            <ImageView
                android:id="@+id/semSom"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/semsom22png" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:background="#E6000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutGameOver"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="227dp"
            android:layout_height="85dp"
            android:background="@drawable/doismillara"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:id="@+id/titulo2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo2"
            android:textStyle="italic"
            android:text="Game Over!"
            android:textSize="50dp"
            android:id="@+id/gameOver"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameOver"
            android:text="Score: "
            android:textStyle="italic"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/scoreAtual"
            android:textColor="#FFFFFF"/>
       <TableLayout
           android:layout_below="@+id/scoreAtual"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
            <TableRow
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/homeGameover"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/homelara" />
                <ImageView
                    android:id="@+id/replayGameOver"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/replayazul" />
            </TableRow>
        </TableLayout>


    </RelativeLayout>


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
